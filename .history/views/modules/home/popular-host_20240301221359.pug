.host   
  h2.heading.host-heading Popular Hosts
  ul.host-list 
    each value in [{name:"Thomas",color:"hsla(14, 100%, 82%, 1)"},{name:"Darrell",color:"hsla(39, 100%, 75%, 1)"},{name:"Arlene",color:"hsla(248, 57%, 80%, 1)"},{name:"Kristin",color:"hsla(341, 100%, 84%, 1)"},{name:"Courtney",color:"hsla(39, 100%, 84%, 1)"},{name:"Cody",color:"hsla(341, 100%, 89%, 1)"},{name:"Arlene",color:"hsla(248, 57%, 80%, 1)"}]
      li.host-item
        .host-avatar(style=`--color:${value.color}`)
          img(src="./images/host-user.png ", alt="User")
        span.host-name=value.name